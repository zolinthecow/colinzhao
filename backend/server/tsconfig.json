{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "esnext", "es2015", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "exclude": ["**/node_modules"],
  "include": [
    "src/**/*.ts",
  ]
}
